@model IEnumerable<EnlaceNoivas.Models.Provider>
@{
    ViewBag.Title = "SearchProvider";
    ViewBag.Controller = "Search";
    ViewBag.Action = "SearchProvider";
}

@foreach (var provider in Model)
{
    <div class="row">
        <div class="col-lg-1"></div>

        <div class="col-lg-2">
            <img width="115" height="105" src="~/Content/Images/@provider.Image" />
        </div>
        <div class="col-lg-6">
            <div class="row">
                <h3>@provider.Name</h3>
                <p>@provider.City</p>
                <p>@provider.Type</p>
            </div>

        </div>
    </div>
}
@for (int page = 1; page <= ViewBag.ListSize; page++ )
{
    @Html.ActionLink(page.ToString(), "SearchProvider/"+page);
}
